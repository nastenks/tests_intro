{
    "version": "0.2.0",
    "configurations": [
        {
        "name": "Run Flask Server (debugpy)",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/app.py",
        "args": ["run", "--debug"],
        "env": {
            "FLASK_APP": "app.py",
            "FLASK_ENV": "development"
        },
        "jinja": true,
        "justMyCode": false
        }
    ]
}